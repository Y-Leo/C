#include<stdio.h>
#include<windows.h>
 
void main()
{
	int i = 0, a = 0, b = 0, c = 0, d = 0;
	int fd = 0;
	for (i = 1; i <= 4; i++)//在这里有4中可能，所以用for循环循环四次
	{
		if (i == 1)//假设A说了谎
		{
			a = 1; c = 1;fd = 1; d = 0;
		}
		if (i == 2)//假设B说了谎
		{
			a = 0; c = 0; fd = 1; d = 0;
		}
		if (i == 3)//假设C说了慌
		{
			a = 0; c = 1; fd = 0; d = 0;
		}
		if (i == 4)//假设D说了慌
		{
			a = 0; c = 1; fd = 1; d = 0;
		}
		if ((a + b + c + d + fd == 1) && (fd == d))
		{
			printf("A=%d B=%d C=%d D=%d", a, b, c, d);
		}		
	}	
	system("pause");
	return 0;
}

