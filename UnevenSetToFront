#include <stdio.h>
#include <windows.h>
#pragma warning (disable :4996)
 
 
void AdjustmentNum(int a[], int len)
{
	int i = 0;
	int *left = a;
	int *right = a + len - 1;
	int tmp = 0;
	while(left<right)
	{
		while(*left % 2 != 0)
		{
			left++;
		}
		while (*right % 2 == 0)
		{
			right--;
		}
		if (left < right)
		{
			tmp = *left;
			*left = *right;
			*right = tmp;
		}
	}
}
 
int main()
{
	int i = 0;
	int arr[10] = { 1, 2, 3, 4, 5, 5, 6, 4, 8, 7 };
	int len = sizeof(arr) / sizeof(arr[0]);
	printf("修改前的数组为：\n");
	for (i; i < 10; i++)
	{
		printf("%2d", arr[i]);
	}
	printf("\n");
	AdjustmentNum(arr, len);
	printf("修改后的数组为：\n");
	for (i=0; i < 10; i++)
	{
		printf("%2d", arr[i]);
	}
	printf("\n");
	system("pause");
	return 0;
}

